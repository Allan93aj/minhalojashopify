{{ 'viva-seu-momento.css' | asset_url | stylesheet_tag }}
{{ 'viva-momento.js' | asset_url | script_tag }}

<div id="scene-{{ section.id }}" class="viva-momento-scene">
  <div class="lado-esquerdo">
    <div class="lampada-container">
      <div class="lampada" id="lamp-{{ section.id }}"></div>
      <img 
        class="poste"
        src="{{ section.settings.post_icon | image_url: width: section.settings.post_icon_width }}"
        alt="Poste"
        width="{{ section.settings.post_icon_width }}"
      >
    </div>

    <div class="imagem-secundaria">
      <img 
        src="{{ section.settings.left_image | image_url: width: section.settings.left_image_width }}"
        alt="{{ section.settings.left_title | escape }}"
        width="{{ section.settings.left_image_width }}"
      >
      <h3>{{ section.settings.left_title }}</h3>
      <p>{{ section.settings.left_text }}</p>
      <a href="{{ section.settings.left_link }}" class="btn-link">leia mais</a>
    </div>
  </div>

  <div class="lado-direito">
    <div class="info-bloco">
      <div class="texto">
        <h2>{{ section.settings.right_title_1 }}</h2>
        <p>{{ section.settings.right_text_1 }}</p>
        <a href="{{ section.settings.right_link_1 }}" class="btn-link">Leia mais</a>
      </div>
      <img 
        src="{{ section.settings.right_image_1 | image_url: width: section.settings.right_image_1_width }}" 
        alt="Imagem 1 Direita"
        width="{{ section.settings.right_image_1_width }}"
      >
    </div>

    <div class="info-bloco">
      <img 
        src="{{ section.settings.right_image_2 | image_url: width: section.settings.right_image_2_width }}" 
        alt="Imagem 2 Direita"
        width="{{ section.settings.right_image_2_width }}"
      >
      <div class="texto">
        <h2>{{ section.settings.right_title_2 }}</h2>
        <p>{{ section.settings.right_text_2 }}</p>
        <a href="{{ section.settings.right_link_2 }}" class="btn-link">Leia mais</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Viva seu momento",
  "settings": [
    {
      "type": "image_picker",
      "id": "post_icon",
      "label": "Imagem do Poste"
    },
    {
      "type": "range",
      "id": "post_icon_width",
      "label": "Largura do poste (px)",
      "min": 50,
      "max": 600,
      "step": 10,
      "default": 200
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Imagem esquerda"
    },
    {
      "type": "range",
      "id": "left_image_width",
      "label": "Largura imagem esquerda (px)",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 300
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Título esquerda"
    },
    {
      "type": "textarea",
      "id": "left_text",
      "label": "Texto esquerda"
    },
    {
      "type": "url",
      "id": "left_link",
      "label": "Link esquerda"
    },
    {
      "type": "header",
      "content": "Bloco direito 1"
    },
    {
      "type": "text",
      "id": "right_title_1",
      "label": "Título bloco 1"
    },
    {
      "type": "textarea",
      "id": "right_text_1",
      "label": "Texto bloco 1"
    },
    {
      "type": "url",
      "id": "right_link_1",
      "label": "Link bloco 1"
    },
    {
      "type": "image_picker",
      "id": "right_image_1",
      "label": "Imagem bloco 1"
    },
    {
      "type": "range",
      "id": "right_image_1_width",
      "label": "Largura imagem bloco 1 (px)",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 300
    },
    {
      "type": "header",
      "content": "Bloco direito 2"
    },
    {
      "type": "text",
      "id": "right_title_2",
      "label": "Título bloco 2"
    },
    {
      "type": "textarea",
      "id": "right_text_2",
      "label": "Texto bloco 2"
    },
    {
      "type": "url",
      "id": "right_link_2",
      "label": "Link bloco 2"
    },
    {
      "type": "image_picker",
      "id": "right_image_2",
      "label": "Imagem bloco 2"
    },
    {
      "type": "range",
      "id": "right_image_2_width",
      "label": "Largura imagem bloco 2 (px)",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 300
    }
  ],
  "presets": [
    {
      "name": "Viva seu momento",
      "category": "Seções Custom"
    }
  ]
}
{% endschema %}
