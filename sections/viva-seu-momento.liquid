{{ 'viva-seu-momento.css' | asset_url | stylesheet_tag }}
{{ 'custom-viva-seu-momento.js' | asset_url | script_tag }}


<section class="viva-seu-momento" id="viva-seu-momento">
  <div class="container-viva-seu-momento">
    <!-- ======== LADO ESQUERDO ======== -->
    <div class="lado-esquerdo">
      <!-- Poste/Lâmpada -->
      <div class="lamp-scene">
        <div class="lamp">
          <div class="lamp-head"></div>
          <div class="lamp-light"></div>
        </div>
      </div>

      <!-- Imagem ao lado do poste -->
      {% if section.settings.left_image != blank %}
        <div class="left-image-wrapper">
          <img
            src="{{ section.settings.left_image | img_url: 'master' }}"
            alt="Imagem esquerda"
            class="left-image"
            style="width: {{ section.settings.left_image_width }}px;"
          />
          {% if section.settings.left_image_title != blank %}
            <h3>{{ section.settings.left_image_title }}</h3>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <!-- ======== LADO DIREITO ======== -->
    <div class="lado-direito">
      <div class="container-lado-direito">

        <!-- BLOCO 1 -->
        <div class="info-bloco">
          <div>
            <h2>{{ section.settings.title_1 }}</h2>
            <p>{{ section.settings.text_1 }}</p>
            {% if section.settings.link_1 != blank %}
              <a href="{{ section.settings.link_1 }}" class="btn-leia-mais">
                {{ section.settings.button_text_1 }}
              </a>
            {% endif %}
          </div>
          {% if section.settings.image_1 != blank %}
            <div>
              <img
                src="{{ section.settings.image_1 | img_url: 'master' }}"
                alt="Imagem bloco 1"
                style="width: {{ section.settings.image_1_width }}px;"
              />
            </div>
          {% endif %}
        </div>

        <!-- BLOCO 2 -->
        <div class="info-bloco">
          {% if section.settings.image_2 != blank %}
            <div>
              <img
                src="{{ section.settings.image_2 | img_url: 'master' }}"
                alt="Imagem bloco 2"
                style="width: {{ section.settings.image_2_width }}px;"
              />
            </div>
          {% endif %}
          <div>
            <h2>{{ section.settings.title_2 }}</h2>
            <p>{{ section.settings.text_2 }}</p>
            {% if section.settings.link_2 != blank %}
              <a href="{{ section.settings.link_2 }}" class="btn-leia-mais">
                {{ section.settings.button_text_2 }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Viva seu momento",
  "settings": [
    {
      "type": "image_picker",
      "id": "post_icon",
      "label": "Ícone do Poste/Lâmpada"
    },
    {
      "type": "range",
      "id": "post_icon_width",
      "label": "Largura da lâmpada (px)",
      "min": 50,
      "max": 600,
      "step": 10,
      "default": 200
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Imagem ao lado da lâmpada"
    },
    {
      "type": "range",
      "id": "left_image_width",
      "label": "Largura imagem esquerda (px)",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 300
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Título imagem esquerda"
    },
    {
      "type": "textarea",
      "id": "left_text",
      "label": "Texto imagem esquerda"
    },
    {
      "type": "url",
      "id": "left_link",
      "label": "Link botão imagem esquerda"
    },

    {
      "type": "header",
      "content": "Bloco direito 1"
    },
    {
      "type": "text",
      "id": "right_title_1",
      "label": "Título bloco 1"
    },
    {
      "type": "textarea",
      "id": "right_text_1",
      "label": "Texto bloco 1"
    },
    {
      "type": "url",
      "id": "right_link_1",
      "label": "Link bloco 1"
    },
    {
      "type": "image_picker",
      "id": "right_image_1",
      "label": "Imagem bloco 1"
    },
    {
      "type": "range",
      "id": "right_image_1_width",
      "label": "Largura imagem bloco 1 (px)",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 300
    },

    {
      "type": "header",
      "content": "Bloco direito 2"
    },
    {
      "type": "text",
      "id": "right_title_2",
      "label": "Título bloco 2"
    },
    {
      "type": "textarea",
      "id": "right_text_2",
      "label": "Texto bloco 2"
    },
    {
      "type": "url",
      "id": "right_link_2",
      "label": "Link bloco 2"
    },
    {
      "type": "image_picker",
      "id": "right_image_2",
      "label": "Imagem bloco 2"
    },
    {
      "type": "range",
      "id": "right_image_2_width",
      "label": "Largura imagem bloco 2 (px)",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 300
    }
  ],
  "presets": [
    {
      "name": "Viva seu momento",
      "category": "Seções Custom"
    }
  ]
}
{% endschema %}