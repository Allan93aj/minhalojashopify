{% comment %}
  Seção: A Essência Ladovas - Layout com Poste e Cards
  Adicione este arquivo em sections/ladovas-essence.liquid
{% endcomment %}

<style>
  .essence-section {
    display: grid;
    grid-template-columns: 200px 1fr 1fr;
    gap: 20px;
    padding: 60px 40px;
    background: {{ section.settings.bg_color }};
    min-height: 90vh;
  }
  
  /* Poste Decorativo */
  .lamp-post {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20px;
  }
  
  .lamp-icon {
    width: 120px;
    height: auto;
    margin-bottom: 20px;
  }
  
  .lamp-icon img,
  .lamp-icon svg {
    width: 100%;
    height: auto;
  }
  
  .main-title {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-size: {{ section.settings.main_title_size }}px;
    font-weight: {{ section.settings.main_title_weight }};
    color: {{ section.settings.main_title_color }};
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-top: 40px;
  }
  
  /* Hero Card Grande */
  .hero-card {
    position: relative;
    border-radius: 30px;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: flex-end;
    padding: 50px;
    min-height: 600px;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 60%);
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    color: white;
    max-width: 80%;
  }
  
  .hero-title {
    font-size: {{ section.settings.hero_title_size }}px;
    font-weight: {{ section.settings.hero_title_weight }};
    margin-bottom: 30px;
    line-height: 1.2;
    text-transform: uppercase;
  }
  
  .hero-description {
    font-size: {{ section.settings.hero_desc_size }}px;
    line-height: 1.6;
    margin-bottom: 30px;
    max-width: 500px;
  }
  
  .hero-link {
    display: inline-block;
    color: white;
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border-bottom: 2px solid transparent;
  }
  
  .hero-link:hover {
    border-bottom-color: white;
    transform: translateX(5px);
  }
  
  /* Coluna Direita com 2 Cards */
  .right-column {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .info-card {
    background: {{ section.settings.card_bg }};
    border-radius: 30px;
    padding: 40px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .info-card.with-image {
    position: relative;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    padding: 0;
  }
  
  .card-content-wrapper {
    position: relative;
    z-index: 2;
    padding: 40px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .info-card.with-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
    z-index: 1;
  }
  
  .info-card.with-image .card-content-wrapper {
    color: white;
  }
  
  .card-title {
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: {{ section.settings.card_title_weight }};
    color: {{ section.settings.card_title_color }};
    margin-bottom: 20px;
    text-transform: uppercase;
    line-height: 1.2;
  }
  
  .info-card.with-image .card-title {
    color: white;
  }
  
  .card-description {
    font-size: {{ section.settings.card_desc_size }}px;
    color: {{ section.settings.card_desc_color }};
    line-height: 1.6;
    margin-bottom: 20px;
  }
  
  .info-card.with-image .card-description {
    color: rgba(255,255,255,0.95);
  }
  
  .card-image {
    width: 100%;
    max-width: 350px;
    border-radius: 20px;
    margin-bottom: 20px;
  }
  
  .card-link {
    display: inline-block;
    color: {{ section.settings.card_title_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    align-self: flex-start;
  }
  
  .info-card.with-image .card-link {
    color: white;
  }
  
  .card-link:hover {
    transform: translateX(5px);
  }
  
  .decorative-icons {
    display: flex;
    gap: 15px;
    margin-top: 20px;
  }
  
  .decorative-icon {
    width: 60px;
    height: 60px;
    border: 2px solid {{ section.settings.card_title_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .decorative-icon svg {
    width: 30px;
    height: 30px;
    stroke: {{ section.settings.card_title_color }};
  }
  
  @media (max-width: 1200px) {
    .essence-section {
      grid-template-columns: 150px 1fr;
      gap: 15px;
    }
    
    .right-column {
      grid-column: 1 / -1;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }
    
    .hero-card {
      grid-column: 2 / 3;
      grid-row: 1;
    }
  }
  
  @media (max-width: 768px) {
    .essence-section {
      grid-template-columns: 1fr;
      padding: 40px 20px;
    }
    
    .lamp-post {
      display: none;
    }
    
    .hero-card {
      min-height: 500px;
      padding: 30px;
    }
    
    .hero-content {
      max-width: 100%;
    }
    
    .hero-title {
      font-size: {{ section.settings.hero_title_size | minus: 10 }}px;
    }
    
    .right-column {
      grid-template-columns: 1fr;
    }
    
    .info-card {
      padding: 30px;
    }
    
    .card-title {
      font-size: {{ section.settings.card_title_size | minus: 4 }}px;
    }
  }
</style>

<section class="essence-section">
  
  <!-- Poste Decorativo -->
  <div class="lamp-post">
    {% if section.settings.lamp_icon %}
      <div class="lamp-icon">
        <img src="{{ section.settings.lamp_icon | img_url: '200x' }}" alt="Ladovas">
      </div>
    {% else %}
      <div class="lamp-icon">
        <svg viewBox="0 0 100 200" xmlns="http://www.w3.org/2000/svg">
          <rect x="45" y="60" width="10" height="140" fill="#1a3a3a"/>
          <ellipse cx="50" cy="40" rx="20" ry="15" fill="#1a3a3a" opacity="0.3"/>
          <path d="M35 45 Q50 55 65 45 L65 60 L35 60 Z" fill="#1a3a3a"/>
          <rect x="40" y="55" width="20" height="8" fill="#ffd700" opacity="0.6"/>
        </svg>
      </div>
    {% endif %}
    
    {% if section.settings.main_title != blank %}
      <h2 class="main-title">{{ section.settings.main_title }}</h2>
    {% endif %}
  </div>
  
  <!-- Hero Card Grande -->
  {% if section.blocks.size > 0 %}
    {% assign hero_block = section.blocks[0] %}
    <div class="hero-card" 
         style="background-image: url('{{ hero_block.settings.background_image | img_url: '1200x' }}');">
      <div class="hero-overlay"></div>
      <div class="hero-content">
        {% if hero_block.settings.title != blank %}
          <h3 class="hero-title">{{ hero_block.settings.title }}</h3>
        {% endif %}
        
        {% if hero_block.settings.description != blank %}
          <p class="hero-description">{{ hero_block.settings.description }}</p>
        {% endif %}
        
        {% if hero_block.settings.link_text != blank and hero_block.settings.link_url != blank %}
          <a href="{{ hero_block.settings.link_url }}" class="hero-link">
            {{ hero_block.settings.link_text }} →
          </a>
        {% endif %}
      </div>
    </div>
  {% endif %}
  
  <!-- Coluna Direita com 2 Cards -->
  <div class="right-column">
    {% for block in section.blocks offset:1 limit:2 %}
      <div class="info-card {% if block.settings.background_image != blank %}with-image{% endif %}"
           {% if block.settings.background_image != blank %}
           style="background-image: url('{{ block.settings.background_image | img_url: '800x' }}');"
           {% endif %}>
        <div class="card-content-wrapper">
          <div>
            {% if block.settings.title != blank %}
              <h3 class="card-title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.card_image != blank %}
              <img src="{{ block.settings.card_image | img_url: '400x' }}" 
                   alt="{{ block.settings.title }}" 
                   class="card-image">
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p class="card-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
          
          <div>
            {% if block.settings.link_text != blank and block.settings.link_url != blank %}
              <a href="{{ block.settings.link_url }}" class="card-link">
                {{ block.settings.link_text }} →
              </a>
            {% endif %}
            
            {% if block.settings.show_icons %}
              <div class="decorative-icons">
                <div class="decorative-icon">
                  <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 17L12 22L22 17" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 12L12 17L22 12" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <div class="decorative-icon">
                  <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" stroke-width="2"/>
                    <path d="M12 6V12L16 14" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
</section>

