{% comment %}
  Seção: Split Screen com Carrossel de Produtos
  Adicione este arquivo em sections/split-product-carousel.liquid
{% endcomment %}

<style>
  .split-carousel-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: {{ section.settings.section_height }}px;
    background-color: {{ section.settings.bg_color }};
  }
  
  /* Lado da Imagem */
  .image-side {
    position: relative;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ section.settings.image_overlay }};
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
  
  .decorative-line {
    position: absolute;
    right: -50px;
    top: 50%;
    transform: translateY(-50%);
    width: 200px;
    height: 400px;
    border: 3px solid {{ section.settings.decorative_line_color }};
    border-radius: 50% 0 0 50%;
    z-index: 2;
  }
  
  /* Lado do Produto */
  .product-side {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: {{ section.settings.content_padding }}px;
    background-color: {{ section.settings.content_bg }};
  }
  
  .product-content {
    max-width: {{ section.settings.content_max_width }}px;
    margin: 0 auto;
  }
  
  .section-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 20px;
    line-height: 1.2;
    text-transform: uppercase;
  }
  
  .section-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    margin-bottom: 40px;
    line-height: 1.6;
  }
  
  /* Carrossel */
  .carousel-container {
    position: relative;
    margin: 40px 0;
  }
  
  .carousel-track {
    display: flex;
    gap: 20px;
    overflow: hidden;
    position: relative;
  }
  
  .carousel-item {
    min-width: 100%;
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .carousel-item.active {
    display: block;
    opacity: 1;
  }
  
  .product-image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    margin-bottom: 20px;
  }
  
  .product-image-wrapper img {
    max-width: 100%;
    max-height: 400px;
    object-fit: contain;
  }
  
  .product-info-text {
    font-size: {{ section.settings.product_info_size }}px;
    color: {{ section.settings.product_info_color }};
    line-height: 1.6;
    text-align: center;
  }
  
  /* Controles do Carrossel */
  .carousel-controls {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
  }
  
  .carousel-arrow {
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    border: 2px solid {{ section.settings.arrow_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    background: transparent;
  }
  
  .carousel-arrow:hover {
    background: {{ section.settings.arrow_color }};
    transform: scale(1.1);
  }
  
  .carousel-arrow svg {
    width: 50%;
    height: 50%;
    stroke: {{ section.settings.arrow_color }};
    transition: stroke 0.3s ease;
  }
  
  .carousel-arrow:hover svg {
    stroke: {{ section.settings.arrow_hover_color }};
  }
  
  @media (max-width: 968px) {
    .split-carousel-section {
      grid-template-columns: 1fr;
    }
    
    .image-side {
      min-height: 400px;
    }
    
    .decorative-line {
      display: none;
    }
    
    .product-side {
      padding: {{ section.settings.content_padding | minus: 20 }}px;
    }
    
    .section-title {
      font-size: {{ section.settings.title_size | minus: 8 }}px;
    }
    
    .product-image-wrapper {
      min-height: 300px;
    }
    
    .product-image-wrapper img {
      max-height: 300px;
    }
  }
</style>

<section class="split-carousel-section">
  <!-- Lado da Imagem -->
  <div class="image-side" 
       style="background-image: url('{{ section.settings.background_image | img_url: '1200x' }}');">
    <div class="image-overlay"></div>
    {% if section.settings.show_decorative_line %}
      <div class="decorative-line"></div>
    {% endif %}
  </div>
  
  <!-- Lado do Produto -->
  <div class="product-side">
    <div class="product-content">
      {% if section.settings.section_title != blank %}
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
      {% endif %}
      
      {% if section.settings.section_description != blank %}
        <p class="section-description">{{ section.settings.section_description }}</p>
      {% endif %}
      
      <div class="carousel-container">
        <div class="carousel-track" id="carousel-{{ section.id }}">
          {% for block in section.blocks %}
            <div class="carousel-item {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}">
              <div class="product-image-wrapper">
                {% if block.settings.product_image %}
                  <img src="{{ block.settings.product_image | img_url: '600x' }}" 
                       alt="{{ block.settings.product_title }}">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}
              </div>
              
              {% if block.settings.product_description != blank %}
                <p class="product-info-text">{{ block.settings.product_description }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
        
        <div class="carousel-controls">
          <button class="carousel-arrow carousel-prev" 
                  onclick="navigateCarousel{{ section.id }}(-1)"
                  aria-label="Produto anterior">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 18L9 12L15 6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          
          <button class="carousel-arrow carousel-next" 
                  onclick="navigateCarousel{{ section.id }}(1)"
                  aria-label="Próximo produto">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 18L15 12L9 6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    let currentIndex{{ section.id }} = 0;
    const items{{ section.id }} = document.querySelectorAll('#carousel-{{ section.id }} .carousel-item');
    const totalItems{{ section.id }} = items{{ section.id }}.length;
    
    window.navigateCarousel{{ section.id }} = function(direction) {
      items{{ section.id }}[currentIndex{{ section.id }}].classList.remove('active');
      
      currentIndex{{ section.id }} += direction;
      
      if (currentIndex{{ section.id }} < 0) {
        currentIndex{{ section.id }} = totalItems{{ section.id }} - 1;
      } else if (currentIndex{{ section.id }} >= totalItems{{ section.id }}) {
        currentIndex{{ section.id }} = 0;
      }
      
      items{{ section.id }}[currentIndex{{ section.id }}].classList.add('active');
    }
  })();
</script>

