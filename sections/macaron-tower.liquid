{% comment %}
  Seção: Torre de Macarons com Card de Produto
  Adicione este arquivo em sections/macaron-tower.liquid
{% endcomment %}

<style>
  .macaron-tower-section {
    padding: 60px 20px;
    background-color: #f5f3f0;
  }
  
  .macaron-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 60px;
    align-items: center;
  }
  
  .product-card {
    background: white;
    border-radius: 20px;
    padding: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
  }
  
  .product-image {
    width: 100%;
    border-radius: 15px;
    overflow: hidden;
    margin-bottom: 20px;
  }
  
  .product-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .product-info {
    padding: 10px;
  }
  
  .product-vendor {
    font-size: 14px;
    color: #666;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .product-title {
    font-size: 24px;
    font-weight: 600;
    color: #1a3a3a;
    margin-bottom: 12px;
  }
  
  .product-price {
    font-size: 20px;
    color: #1a3a3a;
    font-weight: 500;
  }
  
  .content-side {
    padding: 40px;
  }
  
  .main-title {
    font-size: 52px;
    font-weight: 700;
    color: #1a3a3a;
    margin-bottom: 30px;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: -1px;
  }
  
  .description-text {
    font-size: 16px;
    line-height: 1.8;
    color: #333;
    margin-bottom: 20px;
  }
  
  .cta-button {
    display: inline-block;
    background-color: #1a3a3a;
    color: white;
    padding: 18px 40px;
    border-radius: 50px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 20px;
  }
  
  .cta-button:hover {
    background-color: #2d5555;
    transform: translateX(5px);
  }
  
  @media (max-width: 968px) {
    .macaron-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .main-title {
      font-size: 36px;
    }
    
    .content-side {
      padding: 20px;
    }
  }
</style>

<section class="macaron-tower-section">
  <div class="macaron-container">
    
    <!-- Card do Produto -->
    {% assign tower_collection = collections[section.settings.product_collection] %}
{% assign tower_product = tower_collection.products.first %}

<div class="product-card">

  <a href="{{ tower_product.url }}">
    <div class="product-image">
      {% if tower_product.featured_image %}
        <img src="{{ tower_product.featured_image | img_url: '800x' }}" alt="{{ tower_product.title }}">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </a>

  <div class="product-info">
    <div class="product-vendor">{{ tower_product.vendor }}</div>

    <h3 class="product-title">
      <a href="{{ tower_product.url }}">{{ tower_product.title }}</a>
    </h3>

    <div class="product-price">
      {{ tower_product.price | money }}
    </div>
  </div>
</div>

    
    <!-- Conteúdo do Lado Direito -->
    <div class="content-side">
      <h1 class="main-title">{{ section.settings.main_title }}</h1>
      
      <div class="description-text">
        {{ section.settings.description_1 }}
      </div>
      
      <div class="description-text">
        {{ section.settings.description_2 }}
      </div>
      
      <div class="description-text">
        {{ section.settings.description_3 }}
      </div>
      
      <a href="{{ section.settings.button_link }}" class="cta-button">
        {{ section.settings.button_text }}
      </a>
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "Torre de Macarons",
  "settings": [
    {
      "type": "header",
      "content": "Card do Produto"
    },
    {
  "type": "collection",
  "id": "product_collection",
  "label": "Selecione a coleção do produto"
},
  
    {
      "type": "header",
      "content": "Conteúdo Principal"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Título Principal",
      "default": "Torre de Macarons Ladovas"
    },
    {
      "type": "textarea",
      "id": "description_1",
      "label": "Descrição - Parágrafo 1",
      "default": "Mais do que uma sobremesa, a torre de macarons é uma celebração dos momentos que merecem ser lembrados."
    },
    {
      "type": "textarea",
      "id": "description_2",
      "label": "Descrição - Parágrafo 2",
      "default": "Feita com sabores selecionados e cores vibrantes, ela transforma qualquer pausa em uma experiência. Seja um encontro, um aniversário ou um simples café de fim de tarde."
    },
    {
      "type": "textarea",
      "id": "description_3",
      "label": "Descrição - Parágrafo 3",
      "default": "Cada camada é um convite ao prazer e à delicadeza."
    },
    {
      "type": "header",
      "content": "Botão"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto do Botão",
      "default": "Encomende a sua torre →"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link do Botão"
    }
  ],
  "presets": [
    {
      "name": "Torre de Macarons"
    }
  ]
}
{% endschema %}