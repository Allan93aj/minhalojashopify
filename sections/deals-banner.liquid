{% comment %}
  Seção: Banner de Deals com Scroll Infinito
  Adicione este arquivo em sections/deals-banner.liquid
{% endcomment %}

<style>
  .deals-banner {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 0;
    overflow: hidden;
    position: relative;
  }
  
  .deals-track-container {
    display: flex;
    align-items: center;
    gap: 0;
    width: 100%;
  }
  
  .deals-track {
    display: flex;
    align-items: center;
    gap: {{ section.settings.item_gap }}px;
    animation: scroll-{{ section.id }} {{ section.settings.speed }}s linear infinite;
    white-space: nowrap;
  }
  
  .deals-track.paused {
    animation-play-state: paused;
  }
  
  .deals-item {
    display: flex;
    align-items: center;
    gap: 15px;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .deals-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .deals-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  @keyframes scroll-{{ section.id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  @media (max-width: 768px) {
    .deals-item {
      font-size: {{ section.settings.font_size | minus: 2 }}px;
    }
    
    .deals-icon {
      width: {{ section.settings.icon_size | minus: 10 }}px;
      height: {{ section.settings.icon_size | minus: 10 }}px;
    }
  }
</style>

<section class="deals-banner" 
         {% if section.settings.pause_on_hover %}
         onmouseenter="this.querySelector('.deals-track').classList.add('paused')"
         onmouseleave="this.querySelector('.deals-track').classList.remove('paused')"
         {% endif %}>
  <div class="deals-track-container">
    <div class="deals-track">
      {% for block in section.blocks %}
        <div class="deals-item">
          {% if block.settings.icon_image %}
            <div class="deals-icon">
              <img src="{{ block.settings.icon_image | img_url: '100x' }}" 
                   alt="{{ block.settings.text }}">
            </div>
          {% endif %}
          
          <span>{{ block.settings.text }}</span>
        </div>
      {% endfor %}
      
      <!-- Duplicar itens para scroll infinito -->
      {% for block in section.blocks %}
        <div class="deals-item">
          {% if block.settings.icon_image %}
            <div class="deals-icon">
              <img src="{{ block.settings.icon_image | img_url: '100x' }}" 
                   alt="{{ block.settings.text }}">
            </div>
          {% endif %}
          
          <span>{{ block.settings.text }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner Deals",
  "settings": [
    {
      "type": "header",
      "content": "Cores e Estilo"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Cor de Fundo",
      "default": "#0a3d4a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do Texto",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Tamanhos"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding Vertical",
      "min": 10,
      "max": 50,
      "step": 2,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Tamanho da Fonte",
      "min": 12,
      "max": 32,
      "step": 1,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Tamanho dos Ícones",
      "min": 20,
      "max": 60,
      "step": 2,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Peso da Fonte",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Médio" },
        { "value": "600", "label": "Semi-Bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "600"
    },
    {
      "type": "header",
      "content": "Animação"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Velocidade do Scroll",
      "info": "Valores menores = mais rápido",
      "min": 10,
      "max": 60,
      "step": 2,
      "default": 30,
      "unit": "s"
    },
    {
      "type": "range",
      "id": "item_gap",
      "label": "Espaçamento entre Itens",
      "min": 20,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pausar ao passar o mouse",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "deal_item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Ícone (imagem)"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto",
          "default": "Os melhores macarons da sua vida"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Deals",
      "blocks": [
        {
          "type": "deal_item",
          "settings": {
            "text": "Os melhores macarons da sua vida"
          }
        },
        {
          "type": "deal_item",
          "settings": {
            "text": "Descubra nossos macarons artesanais"
          }
        },
        {
          "type": "deal_item",
          "settings": {
            "text": "Feitos com amor e dedicação"
          }
        },
        {
          "type": "deal_item",
          "settings": {
            "text": "Presentes únicos e deliciosos"
          }
        }
      ]
    }
  ]
}
{% endschema %}