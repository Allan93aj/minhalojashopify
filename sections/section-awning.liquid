{% comment %}
  Seção: Hero Banner com Toldo Decorativo
  Adicione este arquivo em sections/hero-awning.liquid
{% endcomment %}

<style>
  .hero-awning-section {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  
  .awning-container {
    position: relative;
    width: 100%;
    height: {{ section.settings.awning_height }}px;
    background: {{ section.settings.awning_color }};
    overflow: hidden;
  }
  
  .awning-scallops {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60px;
    display: flex;
  }
  
  .scallop {
    flex: 1;
    height: 100%;
    background: {{ section.settings.awning_color }};
    border-radius: 0 0 100% 100%;
    margin: 0 -1px;
  }
  
  .hero-content {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.hero_height }}px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 60px 40px;
  }
  
  .hero-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }
  
  .hero-text-box {
    position: relative;
    z-index: 2;
    background: {{ section.settings.text_box_bg }};
    padding: {{ section.settings.text_box_padding }}px;
    max-width: {{ section.settings.text_box_width }}px;
    border-radius: {{ section.settings.text_box_radius }}px;
  }
  
  .hero-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 400;
  }
  
  .hero-title {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.2;
    margin-bottom: 20px;
    text-transform: uppercase;
  }
  
  .hero-description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.6;
    margin-bottom: 30px;
  }
  
  .hero-cta {
    display: inline-block;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    padding: 15px 40px;
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    font-size: {{ section.settings.button_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }
  
  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    opacity: 0.9;
  }
  
  @media (max-width: 768px) {
    .awning-container {
      height: {{ section.settings.awning_height | minus: 30 }}px;
    }
    
    .awning-scallops {
      height: 40px;
    }
    
    .hero-content {
      min-height: {{ section.settings.hero_height | minus: 100 }}px;
      padding: 40px 20px;
    }
    
    .hero-text-box {
      max-width: 100%;
      padding: {{ section.settings.text_box_padding | minus: 10 }}px;
    }
    
    .hero-title {
      font-size: {{ section.settings.title_size | minus: 10 }}px;
    }
    
    .hero-subtitle {
      font-size: {{ section.settings.subtitle_size | minus: 2 }}px;
    }
    
    .hero-description {
      font-size: {{ section.settings.description_size | minus: 2 }}px;
    }
  }
</style>

<section class="hero-awning-section">
  <!-- Toldo Decorativo -->
  <div class="awning-container">
    <div class="awning-scallops">
      {% for i in (1..20) %}
        <div class="scallop"></div>
      {% endfor %}
    </div>
  </div>
  
  <!-- Hero Content -->
  <div class="hero-content" 
       style="background-image: url('{{ section.settings.background_image | img_url: '2000x' }}');">
    
    <div class="hero-text-box">
      {% if section.settings.subtitle != blank %}
        <div class="hero-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}
      
      {% if section.settings.title != blank %}
        <h1 class="hero-title">{{ section.settings.title }}</h1>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="hero-description">{{ section.settings.description }}</div>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-cta">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero com Toldo",
  "settings": [
    {
      "type": "header",
      "content": "Toldo Decorativo"
    },
    {
      "type": "color",
      "id": "awning_color",
      "label": "Cor do Toldo",
      "default": "#0a3d4a"
    },
    {
      "type": "range",
      "id": "awning_height",
      "label": "Altura do Toldo",
