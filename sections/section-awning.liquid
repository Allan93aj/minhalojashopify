      "max": 200,
      "step": 10,
      "default": 140,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Imagem de Fundo"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagem de Fundo"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Cor do Overlay",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Opacidade do Overlay",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 40,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Altura Mínima do Hero",
      "min": 400,
      "max": 800,
      "step": 50,
      "default": 600,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Caixa de Texto"
    },
    {
      "type": "color",
      "id": "text_box_bg",
      "label": "Cor de Fundo da Caixa",
