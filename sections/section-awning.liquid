      "label": "Título Principal",
      "default": "Uma torre de sabores para adoçar o momento."
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Tamanho do Título",
      "min": 24,
      "max": 60,
      "step": 2,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Peso do Título",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-Bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra Bold" }
      ],
      "default": "700"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Cor do Título",
      "default": "#ffffff"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descrição",
      "default": "Passe o mouse nos macarons e descubra os sabores"
    },
    {
      "type": "range",
      "id": "description_size",
      "label": "Tamanho da Descrição",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Cor da Descrição",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Botão"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto do Botão",
      "default": "VER MAIS"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link do Botão"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Cor de Fundo do Botão",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Cor do Texto do Botão",
      "default": "#0a3d4a"
    },
    {
      "type": "range",
      "id": "button_size",
      "label": "Tamanho da Fonte do Botão",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Arredondamento do Botão",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 25,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Hero com Toldo"
    }
  ]
