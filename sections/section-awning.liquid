    },
    {
      "type": "range",
      "id": "text_box_width",
      "label": "Largura Máxima da Caixa",
      "min": 300,
      "max": 700,
      "step": 50,
      "default": 500,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "text_box_padding",
      "label": "Padding da Caixa",
      "min": 20,
      "max": 80,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "text_box_radius",
      "label": "Arredondamento da Caixa",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 10,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Textos"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "MACARONS LADOVAS"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Tamanho do Subtítulo",
      "min": 10,
      "max": 24,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Cor do Subtítulo",
      "default": "#ffffff"
    },
    {
      "type": "textarea",
