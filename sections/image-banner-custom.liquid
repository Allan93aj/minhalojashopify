{{ 'image-banner-custom.css' | asset_url | stylesheet_tag }}

<div id="CustomBanner-{{ section.id }}" class="custom-banner">
  {%- if section.settings.main_image != blank -%}
    <div class="custom-banner__background">
      <img 
        src="{{ section.settings.main_image | image_url: width: 3840 }}" 
        alt="{{ section.settings.main_image.alt | escape }}"
        class="custom-banner__main-image"
      >
      {%- if section.settings.overlay_opacity > 0 -%}
        <div 
          class="custom-banner__overlay" 
          style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
        ></div>
      {%- endif -%}
    </div>

    <div 
      class="custom-banner__center-wrapper" 
      style="width: {{ section.settings.circle_size }}px; height: {{ section.settings.circle_size }}px;"
    >
      {%- if section.settings.rotating_image != blank -%}
        <div 
          class="custom-banner__rotating"
          style="
            animation: spin {{ section.settings.rotation_speed }} linear infinite;
            animation-direction: {% if section.settings.rotation_direction == 'reverse' %}reverse{% else %}normal{% endif %};
            width: {{ section.settings.circle_size }}px;
            height: {{ section.settings.circle_size }}px;
          "
        >
          <img 
            src="{{ section.settings.rotating_image | image_url: width: 600 }}" 
            alt="{{ section.settings.rotating_image.alt | escape }}"
          >
        </div>
      {%- endif -%}

      {%- if section.settings.center_static_image != blank -%}
        <div 
          class="custom-banner__center-static"
          style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px;"
        >
          <img 
            src="{{ section.settings.center_static_image | image_url: width: 400 }}" 
            alt="{{ section.settings.center_static_image.alt | escape }}"
          >
        </div>
      {%- endif -%}
    </div>

    {%- if section.settings.footer_text != blank -%}
      <div class="custom-banner__footer-text">
        {{ section.settings.footer_text }}
      </div>
    {%- endif -%}
  {%- else -%}
    <div class="custom-banner__placeholder">
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      <p>Adicione uma imagem principal no editor</p>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Banner Custom Rotating",
  "tag": "section",
  "class": "section section--custom-banner-rotating",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Imagem principal (fundo)"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Opacidade da sobreposição (escurecer imagem)",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "center_static_image",
      "label": "Ícone fixo central"
    },
    {
      "type": "image_picker",
      "id": "rotating_image",
      "label": "Imagem circular giratória (fica em volta do ícone)"
    },
    {
      "type": "text",
      "id": "rotation_speed",
      "label": "Velocidade da rotação (ex: 5s, 10s, 20s)",
      "default": "10s"
    },
    {
      "type": "select",
      "id": "rotation_direction",
      "label": "Direção da rotação",
      "options": [
        { "value": "normal", "label": "Horário" },
        { "value": "reverse", "label": "Anti-horário" }
      ],
      "default": "normal"
    },
    {
      "type": "range",
      "id": "circle_size",
      "min": 100,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Tamanho do círculo giratório",
      "default": 250
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Tamanho do ícone central",
      "default": 120
    },
    {
      "type": "richtext",
      "id": "footer_text",
      "label": "Texto no rodapé",
      "default": "<p>Seu texto aqui...</p>"
    }
  ],
  "presets": [
    {
      "name": "Banner Rotativo com Ícone Central",
      "category": "Banners"
    }
  ]
}
{% endschema %}
